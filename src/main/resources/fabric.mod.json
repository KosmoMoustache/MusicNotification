  "authors": [
    "KosmoMoustache"
  ],
  "contributors": [
    {
        "name": "YaCCBoy"
    }
  ],
  "contact": {
    "homepage": "https://mod.kosmo.ovh/",
    "sources": "https://github.com/KosmoMoustache/MusicNotification"
  },

  "license": "LGPL-3.0-only",
  "icon": "assets/musicnotification/icon.png",
